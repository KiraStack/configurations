// Zed Settings
// For configuration details, see: https://zed.dev/docs/configuring-zed
// To view default settings without changes, use the command:
// `zed: open default settings` (cmd-shift-p / ctrl-shift-p).

{
    // Vim Mode: Enables or disables Vim-style keybindings.
    "vim_mode": false,

    // Telemetry: Control whether Zed sends diagnostic and usage data.
    "telemetry": {
        "diagnostics": false, // Do not send diagnostic reports.
        "metrics": false // Do not send usage metrics.
    },

    // Font Settings: Customize font appearance in the UI and code buffers.
    "ui_font_size": 16, // Font size for the UI.
    "buffer_font_size": 14, // Font size for editing text/code.
    "ui_font_family": "Hack Nerd Font", // Font family for the UI.
    "buffer_font_family": "Hack Nerd Font", // Font family for the code editor.

    // Line Numbers: Use relative numbering in code buffers.
    "relative_line_numbers": true, // Show line numbers relative to the cursor.

    // Auto Formatting: Format code automatically on save.
    "format_on_save": "on",

    // Tab Size: Set the number of spaces used for tab characters.
    "tab_size": 4,

    // Advanced Font Rendering: Enable extra font features for better typography.
    "buffer_font_features": {
        "calt": true // Enable contextual alternates for smooth rendering.
    },

    // Theme: Control themes for light and dark modes.
    "theme": {
        "mode": "system", // Automatically match the system's light/dark mode.
        "light": "One Light", // Theme used in light mode.
        "dark": "One Dark" // Theme used in dark mode.
    }
}
