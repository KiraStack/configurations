// Zed Settings
// For configuration details, see: https://zed.dev/docs/configuring-zed
// To view default settings without changes, use the command:
// `zed: open default settings` (cmd-shift-p / ctrl-shift-p).

{
    "vim_mode": false, // Disable Vim keybindings

    "telemetry": {
        "diagnostics": false, // Do not send diagnostic data
        "metrics": false // Do not send usage metrics
    },

    "ui_font_size": 16, // Font size for the UI
    "buffer_font_size": 14, // Font size for code buffers
    "ui_font_family": "JetBrains Mono", // UI font
    "buffer_font_family": "JetBrains Mono", // Code editor font

    "relative_line_numbers": true, // Show line numbers relative to the cursor
    "format_on_save": "on", // Automatically format code on save
    "tab_size": 4, // Number of spaces per tab

    "buffer_font_features": {
        "calt": true // Enable contextual alternates
    },

    "theme": {
        "mode": "system", // Match system light/dark mode
        "light": "One Light", // Theme for light mode
        "dark": "One Dark" // Theme for dark mode
    }
}
